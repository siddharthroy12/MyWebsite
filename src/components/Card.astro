---
export interface Props {
  title: string;
  about: string;
  live: string;
  source: string;
}

const { title, description, live, source } = Astro.props;
---

<div class="card">
  <p class="title">{title}</p>
  <p class="description">{description}</p>
  <div class="links">
    <a href={live} target="_black" rel="noreferrer">Live</a>
    <a href={source} target="_black" rel="noreferrer">Source</a>
  </div>
<div>

<style>
  .card {
    border: 2px solid var(--card-border-color);
    border-radius: 3px;
    padding: 20px;
    width: 18em;
    transition-duration: .2s;
    margin-right: 1em;
  }

  .card:hover {
    border-color: var(--card-border-color-hover);
    background: var(--card-background-hover);
  }

  .title {
    color: var(--text-color-1);
    font-size: 1.2rem;
  }

  .description {
    color: var(--text-color-2);
    margin-top: 1em;
  }

  .links {
    margin-top: 1em;
  }

  .links a {
    margin-right: 1em;
    color: var(--text-color-1);
    text-decoration: none;
  }
</style>
